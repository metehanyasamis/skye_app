<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme applied while the process is starting -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/launch_background</item>

        <!-- ✅ FULL EDGE-TO-EDGE on launch too -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- ✅ remove Android forced overlay/contrast -->
        <item name="android:enforceNavigationBarContrast">false</item>
        <item name="android:enforceStatusBarContrast">false</item>

        <!-- ✅ notch/camera cutout -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>

        <!-- ✅ keep system bars from pushing layout -->
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <!-- Theme applied after Flutter starts -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@android:color/transparent</item>

        <!-- ✅ transparent system bars -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- ✅ remove forced overlay/contrast -->
        <item name="android:enforceNavigationBarContrast">false</item>
        <item name="android:enforceStatusBarContrast">false</item>

        <!-- ✅ notch/camera cutout -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>

        <!-- ✅ keep system bars from shrinking layout -->
        <item name="android:fitsSystemWindows">false</item>
    </style>
</resources>
